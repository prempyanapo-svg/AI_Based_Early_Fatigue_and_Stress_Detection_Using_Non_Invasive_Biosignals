{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Train (module)",
      "type": "python",
      "request": "launch",
      "module": "stress_detector.train",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
        "--data",
        "data/D - Physiology features (HR_HRV_SCL - final).csv",
        "--out",
        "outputs"
      ]
    },
    {
      "name": "Predict (module)",
      "type": "python",
      "request": "launch",
      "module": "stress_detector.predict",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "args": [
        "--model",
        "outputs/models/rf_stress_model.joblib",
        "--data",
        "data/D - Physiology features (HR_HRV_SCL - final).csv",
        "--save",
        "outputs/reports/predictions.csv"
      ]
    }
  ]
}